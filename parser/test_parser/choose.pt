using input, output;
fun somebodyplays (var r : like true) is
        choose hand [i] of
            when 2,3,4,5,6,7,8,9,10 then
                value += hand [i];
            when 1 then
                // A 
                value += 11;
                nacescounted11 = nacescounted11 + 1;
            else 
                // J,Q,K  
                value += 10;
        end;